<Window x:Class="QRInventory.windows.add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRInventory.windows"
        mc:Ignorable="d"
        Title="add" Height="720" Width="960">

    <Grid>
        <StackPanel HorizontalAlignment="Left">
            <Button x:Name="HOME" Content="HOME" Height="50" Width="200" Click="HOME_Click" FontSize="24px"></Button>
            <TextBox x:Name="input" Height="50" FontSize="24px" Width="1440" Background="LightGray"/>
            <Button x:Name="GENERATE" Content="GENERATE" Height="80" Width="600" Click="GENERATE_Click" FontSize="36px"/>
            <Image x:Name="imgQR" Height="400"/>
        </StackPanel>
    </Grid>
</Window>
