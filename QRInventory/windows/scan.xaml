<Window x:Class="QRInventory.windows.scan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRInventory.windows"
        mc:Ignorable="d"
        Title="scan" Height="720" Width="960">

    <Grid>
        <StackPanel>
            <ComboBox x:Name="CbCameras" HorizontalAlignment="Left" Width="960" FontSize="24px"/>
            <TextBox x:Name="tb" HorizontalAlignment="Left" FontSize="24px" Width="960"  Text="TextBox" Background="LightGray"/>
            <Image x:Name="imgQR" Height="400"/>
            <Button x:Name="SCAN" Content="SCAN" Height="100" Width="600" Click="SCAN_Click" FontSize="36px"></Button>
        </StackPanel>
    </Grid>
</Window>
