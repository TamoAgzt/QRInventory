<Window x:Class="QRInventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRInventory"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="960">

    <Grid>
        <StackPanel>
            <Button x:Name="SCAN" Content="SCAN" Height="100" Width="100" Click="SCAN_Click"></Button>
            <Button x:Name="ADD" Content="ADD" Height="100" Width="100" Click="ADD_Click"></Button>
            <TextBox x:Name="tbName" Height="30" FontSize="20"/>
            <TextBox x:Name="tbBrand" Height="30" FontSize="20"/>
            <TextBox x:Name="tbType" Height="30" FontSize="20"/>
            <TextBox x:Name="tbDescription" Height="30" FontSize="20"/>
            <TextBox x:Name="tbShort" Height="30" FontSize="20" Visibility="Hidden" />
            <Button x:Name="SAVE" Content="SAVE" Height="50" Width="300" Click="SAVE_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
