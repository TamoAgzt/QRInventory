<Window x:Class="QRInventory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRInventory"
        mc:Ignorable="d"
        Title="MainWindow" Height="620" Width="800">

    <Grid>
        <StackPanel>
            <ComboBox x:Name="CbCameras" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="400"/>
            
            <TextBox x:Name="tb" HorizontalAlignment="Left" Height="50" FontSize="24px" Text="TextBox" Width="800" Background="Gray"/>
            <Image x:Name="imgQR" Height="300"/>
            <Button x:Name="SCAN" Content="SCAN" Height="160" Width="800" Click="SCAN_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
